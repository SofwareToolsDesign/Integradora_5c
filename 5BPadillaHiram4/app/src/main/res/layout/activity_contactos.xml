<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bravoutd.stdesign.a5bpadillahiram.ContactosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agenda - Contactos"
        android:textColor="@color/md_black_1000"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Arturo Leal"
                android:textSize="20sp"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Diana Nuñez"
                android:textSize="20sp"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Daniel Nevárez"
                android:textSize="20sp"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Hiram Padilla"
                android:textSize="20sp"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Alberto Reyna"
                android:textSize="20sp"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Thelma Velázquez"
                android:textSize="20sp"/>

            <CheckBox
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Diego Villarreal"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnagenaceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

</android.support.constraint.ConstraintLayout>
